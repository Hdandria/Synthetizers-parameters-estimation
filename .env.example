# Project Configuration
PROJECT_ROOT=/workspace
PYTHONUNBUFFERED=1
HYDRA_FULL_ERROR=1

# GPU Configuration
CUDA_VISIBLE_DEVICES=0

# Weights & Biases (optional, leave empty to skip)
WANDB_API_KEY=
WANDB_PROJECT=synth-param-estimation
WANDB_ENTITY=

# OVH Object Storage (S3-compatible)
# Get these from OVH Cloud Manager > Object Storage > Users & Roles
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_ENDPOINT_URL=https://s3.gra.io.cloud.ovh.net
AWS_REGION=gra

# Dataset Configuration
# For S3: s3://bucket-name/datasets/surge-simple
# For local: /workspace/datasets/surge-simple
DATASET_ROOT=s3://my-bucket/datasets/surge-simple
PREDICT_FILE=s3://my-bucket/datasets/surge-simple/test.h5

# VST Plugin Configuration
# For S3: s3://bucket-name/plugins/SurgeXT.vst3
# For local: /workspace/plugins/SurgeXT.vst3
VST_PLUGIN_PATH=/workspace/plugins/SurgeXT.vst3

# Logging Configuration
LOGURU_LEVEL=INFO

# Training Configuration (can be overridden via Hydra)
SEED=42
