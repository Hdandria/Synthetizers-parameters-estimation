# Weights & Biases
WANDB_API_KEY=wandb_api_key
WANDB_ENTITY=paindespistes-t-l-com-paris
WANDB_PROJECT=synth-prediction

# OVH API Credentials (for ovhai CLI and Terraform)
# Create at: https://www.ovh.com/auth/api/createToken
# Required scopes: GET/POST/PUT/DELETE on /cloud/*
OVH_ENDPOINT=ovh-eu
OVH_APPLICATION_KEY=ovh_app_key
OVH_APPLICATION_SECRET=ovh_app_secret
OVH_CONSUMER_KEY=ovh_consumer_key
OVH_PROJECT_ID=ovh_project_id

# OVH Infrastructure Settings
OVH_REGION=GRA
OVH_ENVIRONMENT=dev

# Object Storage (OVH S3)
AWS_ACCESS_KEY_ID=ovh_s3_access_key
AWS_SECRET_ACCESS_KEY=ovh_s3_secret_key
AWS_DEFAULT_REGION=gra
AWS_ENDPOINT_URL=https://s3.gra.io.cloud.ovh.net

# S3 Buckets
S3_BUCKET=uniform-datasets        # Datasets
S3_BUCKET_OUTPUTS=outputs         # Training outputs
S3_DATASET_PATH=/datasets         # Dataset mount path
S3_PLUGIN_PATH=/plugins           # VST plugins path

# Container Registry
# Docker Hub credentials (for `docker login`)
DOCKER_REGISTRY=benjamindupuis
DOCKER_USERNAME=benjamindupuis
DOCKER_PASSWORD=docker_hub_token  # Use access token, not password

# Training Configuration
FLAVOR=ai1-1-gpu  # OVH flavor (ai1-1-gpu = 1x Tesla V100S, ai1-1-cpu = CPU only)

# Project
PROJECT_ROOT=/workspace
